<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaveylax.yeniappwkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="com.vaveylax.yeniappwkotlin.MVVMApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/appName"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.edit_profile.EditProfileActivity"/>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.PhoneAuthActivity" />
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.splashScreen.SplashScreenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.chat.ChatActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.comment.CommentActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.auth.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.auth.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.vaveylax.yeniappwkotlin.ui.activity.home.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MaterialDesign"/>

        <service android:name="com.vaveylax.yeniappwkotlin.data.firebaseNotification.FcmMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
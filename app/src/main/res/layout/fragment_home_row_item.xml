<?xml version="1.0" encoding="utf-8"?>

<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_profile_resim"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/post_first_name" />

        <TextView
            android:id="@+id/post_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#181515"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Aytekin"
            app:layout_constraintStart_toEndOf="@id/post_profile_resim"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/btnSignUp"
            android:textSize="16sp"
            tools:text="kucuk_kurbaga52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_first_name"
            app:layout_constraintBottom_toBottomOf="@id/post_first_name" />

        <TextView
            android:id="@+id/post_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Evden henüzasdasdasd yeni çıkmıştım otobüs beklerken arkadan .."
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="@id/post_first_name"
            app:layout_constraintTop_toBottomOf="@id/post_first_name"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/home_likes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_heart_gray"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/post_text"
            app:layout_constraintTop_toBottomOf="@id/post_text"/>

        <TextView
            android:id="@+id/post_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15"
            android:textSize="16sp"
            android:textColor="#202020"
            android:layout_marginStart="3dp"
            app:layout_constraintLeft_toRightOf="@id/home_likes"
            app:layout_constraintTop_toTopOf="@id/home_likes"
            app:layout_constraintBottom_toBottomOf="@id/home_likes"/>

        <ImageView
            android:id="@+id/postBtnComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:text="15"
            android:textSize="18sp"
            android:src="@drawable/icon_comment"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/post_like_count"
            app:layout_constraintTop_toTopOf="@id/home_likes"
            app:layout_constraintBottom_toBottomOf="@id/home_likes"/>


        <TextView
            android:id="@+id/post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            tools:text="10"
            android:textSize="16sp"
            android:textColor="#202020"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/postBtnComment"
            app:layout_constraintTop_toTopOf="@id/postBtnComment"
            app:layout_constraintBottom_toBottomOf="@id/postBtnComment"/>

        <TextView
            android:id="@+id/post_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            tools:text="10 dk önce"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/post_comment_count"
            app:layout_constraintTop_toTopOf="@id/post_comment_count"
            app:layout_constraintBottom_toBottomOf="@id/post_comment_count"/>


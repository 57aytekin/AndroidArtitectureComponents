<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/likeRowPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/likeRowUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/likeRowDate"
            app:layout_constraintStart_toEndOf="@id/likeRowPhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/likeRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voveyle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/likeRowUserName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/likeRowBtn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/send_message"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_button_send_message"
            app:layout_constraintEnd_toEndOf="@id/likeRowDate"
            app:layout_constraintTop_toBottomOf="@id/likeRowUserName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
